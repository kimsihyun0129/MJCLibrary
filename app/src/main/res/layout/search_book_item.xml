<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:paddingBottom="20dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:text="책이름"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/bookimg"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/main_color"/>


    <ImageView
        android:id="@+id/bookimg"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bookname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border"
       />
    <TextView
        android:id="@+id/bookmaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:text="작가이름"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/bookimg"
        app:layout_constraintTop_toBottomOf="@id/bookname"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/bookoffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="편집사"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/bookimg"
        app:layout_constraintTop_toBottomOf="@id/bookmaker"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/librarycode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="도서관 코드"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/bookimg"
        app:layout_constraintTop_toBottomOf="@id/bookoffice"
        android:textColor="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>