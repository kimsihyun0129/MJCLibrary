<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logoImage_login"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_mjc_login"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_mjc_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yoon_gothic"
        android:text="명지전문대학"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_library_login"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/logoImage_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logoImage_login"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_library_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pt_serif_bold"
        android:text="LIBRARY"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/logoImage_login"
        app:layout_constraintLeft_toLeftOf="@+id/tv_mjc_login"
        app:layout_constraintRight_toRightOf="@+id/tv_mjc_login"
        app:layout_constraintTop_toBottomOf="@+id/tv_mjc_login" />


    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/yoon_gothic"
        android:text="학번 : "
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_password"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_student_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/et_student_number"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:ems="10"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_student_number"
        app:layout_constraintLeft_toRightOf="@+id/tv_student_number"
        app:layout_constraintTop_toTopOf="@+id/tv_student_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="비밀번호 : "
        android:textSize="30dp"
        android:fontFamily="@font/yoon_gothic"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@+id/tv_student_number"
        app:layout_constraintRight_toRightOf="@+id/tv_student_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_student_number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_password"
        app:layout_constraintLeft_toLeftOf="@+id/et_student_number"
        app:layout_constraintRight_toRightOf="@+id/et_student_number"
        app:layout_constraintTop_toTopOf="@+id/tv_password"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_password_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호는 생년월일입니다."
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/et_password"
        app:layout_constraintRight_toRightOf="@+id/et_password"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:layout_marginBottom="130dp"
        android:text="로그인"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>