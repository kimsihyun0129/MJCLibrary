<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".Activity.SplashActivity">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/logoImage_splash"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_mjc_splash"
        app:layout_constraintVertical_chainStyle="packed"/>


    <TextView
        android:id="@+id/tv_mjc_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="명지전문대학"
        app:layout_constraintTop_toBottomOf="@+id/logoImage_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_library_splash"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/yoon_gothic" />

    <TextView
        android:id="@+id/tv_library_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY"
        app:layout_constraintTop_toBottomOf="@+id/tv_mjc_splash"
        app:layout_constraintRight_toRightOf="@+id/tv_mjc_splash"
        app:layout_constraintLeft_toLeftOf="@+id/tv_mjc_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/pt_serif_bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>